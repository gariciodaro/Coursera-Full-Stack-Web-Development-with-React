// install as a development dependency
npm install --save-dev node-sass@4.7.2
// the node-sass script is added to the package.json, where
// we define that the origin scss is on css/ folder and the 
// compiled output will be on the folder css/
 "scripts": {
    "start": "npm run lite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/"
  }
